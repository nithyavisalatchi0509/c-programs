#include <stdio.h>

struct Employee {
    int id;
    char name[50];
    char department[30];
    float salary;
};

int main() {
    struct Employee emp;
    FILE *fp = fopen("employees.txt", "r");
    if (!fp) { 
        printf("Unable to open file.\n"); 
        return 1; 
    }

    printf("--- Employee Details ---\n");
    while (fscanf(fp, "%d %[^\n] %[^\n] %f", &emp.id, emp.name, emp.department, &emp.salary) != EOF) {
        printf("ID: %d\nName: %s\nDepartment: %s\nSalary: %.2f\n\n", emp.id, emp.name, emp.department, emp.salary);
    }

    fclose(fp);
    return 0;
}
