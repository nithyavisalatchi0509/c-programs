#include <stdio.h>
#include <string.h>

int main() {
    char str[50];
    int i, len, flag = 1;

    printf("Enter a string: ");
    scanf("%s", str);  // single word input

    len = strlen(str);

    for(i = 0; i < len/2; i++) {
        if(str[i] != str[len-1-i]) {
            flag = 0;
            break;
        }
    }

    if(flag)
        printf("String is a palindrome.\n");
    else
        printf("String is not a palindrome.\n");

    return 0;
}
