#include <stdio.h>

// Function to calculate total bill
float calculateBill(float price, int qty) {
    return price * qty;
}

int main() {
    float price, total;
    int qty;

    printf("Enter price of item: ");
    scanf("%f", &price);

    printf("Enter quantity: ");
    scanf("%d", &qty);

    total = calculateBill(price, qty);

    printf("Total bill = %.2f\n", total);

    return 0;
}
