#include <stdio.h>
#include <string.h>

struct Student {
    int roll;
    char name[50];
    float marks;
};

int main() {
    struct Student s;
    FILE *fp = fopen("students.txt", "r+"); // Open file in read/write mode
    if (!fp) {
        printf("Unable to open file.\n");
        return 1;
    }

    int rollToUpdate;
    int found = 0;
    printf("Enter Roll Number to update: ");
    scanf("%d", &rollToUpdate);

    // Search for the record and update
    while (fscanf(fp, "%d %[^\n] %f", &s.roll, s.name, &s.marks) != EOF) {
        if (s.roll == rollToUpdate) {
            printf("Enter new marks for %s: ", s.name);
            scanf("%f", &s.marks);

            fseek(fp, -((long)sizeof(s.roll) + strlen(s.name) + sizeof(s.marks) + 3), SEEK_CUR); 
            // Move the file pointer back to overwrite the record (simplified explanation)
            fprintf(fp, "%d %s %.2f\n", s.roll, s.name, s.marks);
            found = 1;
            break;
        }
    }

    fclose(fp);

    if (found)
        printf("Record updated successfully.\n");
    else
        printf("Record with Roll Number %d not found.\n", rollToUpdate);

    return 0;
}
