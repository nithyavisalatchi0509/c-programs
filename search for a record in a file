#include <stdio.h>
#include <string.h>

struct Student {
    int roll;
    char name[50];
    float marks;
};

int main() {
    struct Student s;
    FILE *fp = fopen("students.txt", "r");
    if (!fp) {
        printf("Unable to open file.\n");
        return 1;
    }

    int rollToSearch;
    int found = 0;

    printf("Enter Roll Number to search: ");
    scanf("%d", &rollToSearch);

    // Search for the record
    while (fscanf(fp, "%d %[^\n] %f", &s.roll, s.name, &s.marks) != EOF) {
        if (s.roll == rollToSearch) {
            printf("\n--- Student Record Found ---\n");
            printf("Roll: %d\nName: %s\nMarks: %.2f\n", s.roll, s.name, s.marks);
            found = 1;
            break;
        }
    }

    if (!found) {
        printf("Record with Roll Number %d not found.\n", rollToSearch);
    }

    fclose(fp);
    return 0;
}
