#include <stdio.h>
#include <string.h>

struct Student {
    int roll;
    char name[50];
    float marks;
};

int main() {
    struct Student s;
    FILE *fp = fopen("students.txt", "r");
    FILE *temp = fopen("temp.txt", "w");
    if (!fp || !temp) {
        printf("Unable to open file.\n");
        return 1;
    }

    int rollToDelete;
    int found = 0;
    printf("Enter Roll Number to delete: ");
    scanf("%d", &rollToDelete);

    // Copy all records except the one to delete
    while (fscanf(fp, "%d %[^\n] %f", &s.roll, s.name, &s.marks) != EOF) {
        if (s.roll == rollToDelete) {
            found = 1; // Skip writing this record
        } else {
            fprintf(temp, "%d %s %.2f\n", s.roll, s.name, s.marks);
        }
    }

    fclose(fp);
    fclose(temp);

    // Replace original file with temp file
    remove("students.txt");
    rename("temp.txt", "students.txt");

    if (found)
        printf("Record with Roll Number %d deleted successfully.\n", rollToDelete);
    else
        printf("Record with Roll Number %d not found.\n", rollToDelete);

    return 0;
}
