#include <stdio.h>

struct Student {
    int roll;
    char name[50];
    float marks;
};

int main() {
    struct Student s;
    FILE *fp = fopen("students.txt", "w");
    if (!fp) { printf("Unable to open file\n"); return 1; }

    printf("Enter Roll Number: "); scanf("%d", &s.roll);
    printf("Enter Name: "); scanf(" %[^\n]", s.name);
    printf("Enter Marks: "); scanf("%f", &s.marks);

    fprintf(fp, "Roll: %d\nName: %s\nMarks: %.2f\n", s.roll, s.name, s.marks);
    fclose(fp);
    printf("Student details saved to file.\n");
    return 0;
}
