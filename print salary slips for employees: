#include <stdio.h>

int main() {
    int empId;
    float basic, hra, da, gross;

    printf("Enter Employee ID: ");
    scanf("%d", &empId);

    printf("Enter Basic Salary: ");
    scanf("%f", &basic);

    hra = 0.20 * basic;
    da  = 0.10 * basic;
    gross = basic + hra + da;

    printf("\n--- Salary Slip ---\n");
    printf("Employee ID : %d\n", empId);
    printf("Basic Salary: %.2f\n", basic);
    printf("HRA         : %.2f\n", hra);
    printf("DA          : %.2f\n", da);
    printf("Gross Salary: %.2f\n", gross);

    return 0;
}
