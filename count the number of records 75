#include <stdio.h>

int main() {
    FILE *fp = fopen("records.txt", "r"); // Open the file in read mode
    if (!fp) {
        printf("Unable to open file.\n");
        return 1;
    }

    char ch;
    int count = 0;

    // Count lines in the file
    while ((ch = fgetc(fp)) != EOF) {
        if (ch == '\n') {
            count++;
        }
    }

    fclose(fp);

    printf("Total records in the file: %d\n", count);
    return 0;
}
