#include <stdio.h>

struct Login {
    char username[50];
    char password[50];
};

int main() {
    struct Login user;
    FILE *fp = fopen("login.txt", "w");
    if (!fp) {
        printf("Unable to open file.\n");
        return 1;
    }

    // Input login details
    printf("Enter Username: ");
    scanf(" %[^\n]", user.username);

    printf("Enter Password: ");
    scanf(" %[^\n]", user.password);

    // Write details to file
    fprintf(fp, "Username: %s\nPassword: %s\n", user.username, user.password);
    fclose(fp);

    printf("Login details saved to file.\n");
    return 0;
}
