#include <stdio.h>

// Function declaration
int factorial(int n);

int main() {
    int num;
    printf("Enter a number: ");
    scanf("%d", &num);

    printf("Factorial of %d is %d", num, factorial(num));
    return 0;
}

// Recursive function
int factorial(int n) {
    if (n == 0 || n == 1)
        return 1;              // Base condition
    else
        return n * factorial(n - 1);  // Recursive call
}
