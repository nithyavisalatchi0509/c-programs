#include <stdio.h>
#include <ctype.h>
#include <string.h>

int main() {
    char str[50];
    int i;

    printf("Enter a string: ");
    scanf("%s", str);  // single word input

    for(i = 0; str[i] != '\0'; i++) {
        str[i] = toupper(str[i]);
    }

    printf("Uppercase string: %s\n", str);

    return 0;
}
